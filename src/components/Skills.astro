---
const allProjects = await Astro.glob('../pages/projects/*.md');
const tags = [...new Set(allProjects.map((project) => project.frontmatter.skills).flat())];
const {fontSize} = Astro.props;
---
<div class="tags">
    {tags.map((tag) => (
      <p class="tag">
        <a href={`/skills/${tag}`}>{tag}</a>
      </p>
      ))}
</div>
<style define:vars={{fontSize}}>
  a {
    color: #00539F;
  }

  .tags {
    display: flex; 
    flex-wrap: wrap; 
    margin: 0 auto;  
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: var(--fontSize);
    background-color: #F8FCFD;
  }
</style>