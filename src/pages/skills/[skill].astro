---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Project from '../../components/Project.astro';

export async function getStaticPaths() {
  const allProjects = await Astro.glob('../projects/*.md');

  const uniqueProjects = [...new Set(allProjects.map((project) => project.frontmatter.tags).flat())];


  return uniqueProjects.map((tag) => {
    const filteredProjects = allProjects.filter((project) => project.frontmatter.tags.includes(tag));
    return {
      params: { tag },
      props: { projects: filteredProjects },
    };
  });
}

const { tag } = Astro.params;
const { projects } = Astro.props;
---

<BaseLayout pageTitle={tag}>
  <p>Projects tagged with {tag}</p>
  <ul>
    {projects.map((project) => <Project url={project.url} title={project.frontmatter.title}/>)}
  </ul>  </ul>
</BaseLayout>
